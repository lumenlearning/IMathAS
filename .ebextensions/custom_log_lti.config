# https://docs.aws.amazon.com/elasticbeanstalk/latest/dg/AWSHowTo.cloudwatchlogs.html
files:
  "/etc/awslogs/config/ohm_lti_grade_return.conf":
    mode: "000600"
    owner: root
    group: root
    content: |
      [lti_log]
      log_group_name = `{"Fn::Join":["/", ["/aws/elasticbeanstalk", { "Ref":"AWSEBEnvironmentName" }, "var/log/httpd/lti_log"]]}`
      log_stream_name = {instance_id}
      file = /var/log/httpd/lti_log*
      file_fingerprint_lines=1-8

commands:
  "01":
    command: chkconfig awslogs on
  "02":
    command: service awslogs restart


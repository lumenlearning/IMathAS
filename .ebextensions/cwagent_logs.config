# https://docs.aws.amazon.com/AmazonCloudWatch/latest/monitoring/CloudWatch-Agent-Configuration-File-Details.html#CloudWatch-Agent-Configuration-File-Logssection
files:
  "/opt/aws/amazon-cloudwatch-agent/etc/ohm-config.json":
    mode: "000600"
    owner: root
    group: root
    content: |
      {
        "agent": {
          "run_as_user": "cwagent"
        },
        "logs": {
          "logs_collected": {
            "files": {
              "collect_list": [
                {
                  "file_path": "/var/log/php-fpm/error.log*",
                  "log_group_name": "`{"Fn::Join":["/", ["/aws/elasticbeanstalk", { "Ref":"AWSEBEnvironmentName" }, "var/log/php-fpm/error.log"]]}`",
                  "log_stream_name": "{instance_id}",
                  "retention_in_days": 30
                },
                {
                  "file_path": "/var/log/php-fpm/www-error.log*",
                  "log_group_name": "`{"Fn::Join":["/", ["/aws/elasticbeanstalk", { "Ref":"AWSEBEnvironmentName" }, "var/log/php-fpm/www-error.log"]]}`",
                  "log_stream_name": "{instance_id}",
                  "retention_in_days": 30
                },
                {
                  "file_path": "/var/log/httpd/access_log*",
                  "log_group_name": "`{"Fn::Join":["/", ["/aws/elasticbeanstalk", { "Ref":"AWSEBEnvironmentName" }, "var/log/httpd/access_log"]]}`",
                  "log_stream_name": "{instance_id}",
                  "retention_in_days": 30
                },
                {
                  "file_path": "/var/log/httpd/error_log*",
                  "log_group_name": "`{"Fn::Join":["/", ["/aws/elasticbeanstalk", { "Ref":"AWSEBEnvironmentName" }, "var/log/httpd/error_log"]]}`",
                  "log_stream_name": "{instance_id}",
                  "retention_in_days": 30
                },
                {
                  "file_path": "/var/log/httpd/lti/lti_log*",
                  "log_group_name": "`{"Fn::Join":["/", ["/aws/elasticbeanstalk", { "Ref":"AWSEBEnvironmentName" }, "var/log/httpd/lti/lti_log"]]}`",
                  "log_stream_name": "{instance_id}",
                  "retention_in_days": 30
                },
                {
                  "file_path": "/var/log/httpd/payment_api/ohm-api*.log",
                  "log_group_name": "`{"Fn::Join":["/", ["/aws/elasticbeanstalk", { "Ref":"AWSEBEnvironmentName" }, "var/log/httpd/payment_api/ohm-api.log"]]}`",
                  "log_stream_name": "{instance_id}",
                  "retention_in_days": 30
                },
                {
                  "file_path": "/var/log/httpd/question_api/question_api*.log",
                  "log_group_name": "`{"Fn::Join":["/", ["/aws/elasticbeanstalk", { "Ref":"AWSEBEnvironmentName" }, "var/log/httpd/question_api/question_api.log"]]}`",
                  "log_stream_name": "{instance_id}",
                  "retention_in_days": 30
                }
              ]
            }
          }
        }
      }
files:
  "/etc/awslogs/config/question_api_log.conf":
    mode: "000600"
    owner: webapp
    group: webapp
    content: |
      [/var/app/current/ohm/lumenapi/storage/logs/laravel.log]
      log_group_name = `{"Fn::Join":["/", ["/aws/elasticbeanstalk", { "Ref":"AWSEBEnvironmentName" }, "var/app/current/ohm/lumenapi/storage/logs/laravel.log"]]}`
      log_stream_name = {instance_id}
      file = /var/app/current/ohm/lumenapi/storage/logs/laravel.log*


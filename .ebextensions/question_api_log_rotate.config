# https://docs.aws.amazon.com/elasticbeanstalk/latest/dg/AWSHowTo.cloudwatchlogs.html
files:
  "/etc/logrotate.d/question_api_log":
    mode: "000644"
    owner: root
    group: root
    content: |
      /var/app/current/ohm/lumenapi/storage/logs/laravel.log
      {
          nocreate
          missingok
          daily
          compress
          delaycompress
          copytruncate
          dateext
          dateformat .%Y-%m-%d
          rotate 10
      }


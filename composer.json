{
    "require": {
        "php": ">=7.1.0",
        "ext-pdo": "*",
        "slim/slim": "3.9.2",
        "slim/php-view": "2.2.0",
        "monolog/monolog": "1.23.0",
        "illuminate/database": "5.4.36",
        "ramsey/uuid": "3.7.3",
        "tuupola/slim-jwt-auth": "^2.4.0"
    },
    "require-dev": {
        "robmorgan/phinx": "^0.9.2",
        "phpunit/phpunit": "^6.5",
        "codeception/codeception": "^2.4",
        "codeception/c3": "^2.4",
        "flow/jsonpath": "0.4.0",
        "fzaninotto/faker": "^1.7",
        "squizlabs/php_codesniffer": "3.4.2"
    },
    "autoload": {
        "psr-4": {
            "\\": "includes/",
            "OHM\\": "ohm/",
            "OHM\\Admin\\": "admin/",
            "OHM\\Models\\": "ohm/models/",
            "OHM\\Controlers\\": "ohm/controlers/",
            "OHM\\Api\\": "ohm/api/src/",
            "OHM\\Includes\\": "ohm/includes/",
            "OHM\\Exceptions\\": "ohm/exceptions/"
        }
    },
    "autoload-dev": {
        "phpunit/phpunit": "^5.7",
        "psr-4": {
            "Tests\\": "tests/",
            "OHM\\Tests\\Api\\": "ohm/tests/api/",
            "OHM\\Tests\\Functional\\": "ohm/tests/functional/",
            "OHM\\Tests\\Unit\\": "ohm/tests/unit/",
            "OHM\\Mocks\\": "ohm/mocks/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t .",
        "test": [
            "phpunit",
            "codecept run"
        ],
        "test-mom": "phpunit",
        "test-ohm": "codecept run",
        "test-ohmv": "codecept run --steps --coverage --coverage-html",
        "coverage-ohm": "codecept run --coverage --coverage-html",
        "migrate-ohm": "phinx migrate",
        "seed-ohm": "phinx seed:run",
        "php-cs-fixer": "php-cs-fixer --rules=@PSR12"
    }
}

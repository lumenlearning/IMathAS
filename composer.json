{
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "3.9.2",
        "slim/php-view": "2.2.0",
        "monolog/monolog": "1.23.0",
        "illuminate/database": "5.4.36",
        "ramsey/uuid": "3.7.3"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0",
        "codeception/codeception": "^2.4",
        "flow/jsonpath": "0.4.0"
    },
    "autoload": {
        "psr-4": {
            "OHM\\": "ohm/",
            "OHM\\Api\\": "ohm/api/src/"
        }
    },
    "autoload-dev": {
        "phpunit/phpunit": "^5.7",
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "echo 'Use targets: testmom and testohm'; exit 1",
        "testmom": "phpunit",
        "testohm": "codecept run"
    }
}

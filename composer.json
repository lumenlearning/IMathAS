{
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-zlib": "*",
        "ext-fileinfo": "*",
        "php-di/php-di": "7.0.6",
        "slim/slim": "^4.12.0",
        "slim/psr7": "^1.6.1",
        "slim/php-view": "^3.2.0",
        "monolog/monolog": "^3.5.0",
        "illuminate/database": "^10.43.0",
        "ramsey/uuid": "^4.7.5",
        "tuupola/slim-jwt-auth": "^3.8.0"
    },
    "require-dev": {
        "robmorgan/phinx": "^0.16.0",
        "phpunit/phpunit": "^10.5",
        "codeception/codeception": "^5.1",
        "codeception/c3": "^2.9",
        "codeception/module-asserts": "^3.0",
        "codeception/module-webdriver": "^4.0",
        "mockery/mockery": "^1.6.7",
        "softcreatr/jsonpath": "0.8.3",
        "fakerphp/faker": "^1.23.1"
    },
    "autoload": {
        "psr-4": {
            "\\": "includes/",
            "Course\\Includes\\": "course/includes/",
            "OHM\\": "ohm/",
            "OHM\\Admin\\": "admin/",
            "OHM\\Eula\\": "ohm/eula/",
            "OHM\\Models\\": "ohm/models/",
            "OHM\\Controlers\\": "ohm/controlers/",
            "OHM\\Api\\": "ohm/api/src/",
            "OHM\\Includes\\": "ohm/includes/",
            "OHM\\Exceptions\\": "ohm/exceptions/",
            "OHM\\Services\\": "ohm/services/",
            "OHM\\Tracking\\": "ohm/tracking/",
            "Desmos\\": "desmos/",
            "Desmos\\Includes\\": "desmos/includes",
            "Desmos\\Models\\": "desmos/models/",
            "Desmos\\Controlers\\": "desmos/controlers/",
            "Desmos\\Views\\": "desmos/views/"
        }
    },
    "autoload-dev": {
        "phpunit/phpunit": "^5.7",
        "psr-4": {
            "Tests\\": "tests/",
            "\\": "includes/",
            "Course\\Includes\\": "course/includes/",
            "OHM\\Tests\\Api\\": "ohm/tests/api/",
            "OHM\\Tests\\Functional\\": "ohm/tests/functional/",
            "OHM\\Tests\\Unit\\": "ohm/tests/unit/",
            "OHM\\Mocks\\": "ohm/mocks/",
            "Desmos\\": "desmos/",
            "Desmos\\Models\\": "desmos/models/",
            "Desmos\\Controlers\\": "desmos/controlers/",
            "Desmos\\Views\\": "desmos/views/",
            "Desmos\\Lti\\": "desmos/lti/"
        }
    },
    "config": {
        "process-timeout" : 0,
        "allow-plugins": {
            "codeception/c3": false,
            "kylekatarnls/update-helper": false
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t .",
        "test": [
            "phpunit --group ohm",
            "phpunit --exclude-group ohm",
            "codecept run"
        ],
        "test-mom": [
            "phpunit --group ohm",
            "phpunit --exclude-group ohm"
        ],
        "test-ohm": "codecept run",
        "test-ohmv": "codecept run --steps --coverage --coverage-html",
        "coverage-ohm": "codecept run --coverage --coverage-html",
        "migrate-ohm": "phinx migrate",
        "seed-ohm": "phinx seed:run",
        "php-cs-fixer": "php-cs-fixer --rules=@PSR12 --"
    }
}

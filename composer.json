{
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "3.9.2",
        "slim/php-view": "2.2.0",
        "monolog/monolog": "1.23.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0",
        "codeception/codeception": "^2.4"
    },
    "autoload-dev": {
        "phpunit/phpunit": "^5.7",
        "psr-4": {
            "OHM\\": "ohm/",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "echo 'Use targets: test1 and test2'; exit 1",
        "test1": "phpunit",
        "test2": "codecept run"
    }
}

{
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "3.9.2",
        "slim/php-view": "2.2.0",
        "monolog/monolog": "1.23.0",
        "illuminate/database": "5.4.36",
        "ramsey/uuid": "3.7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "codeception/codeception": "^2.4",
        "codeception/c3": "^2.4",
        "flow/jsonpath": "0.4.0"
    },
    "autoload": {
        "psr-4": {
            "OHM\\": "ohm/",
            "OHM\\Models\\": "ohm/models/",
            "OHM\\Api\\": "ohm/api/src/"
        }
    },
    "autoload-dev": {
        "phpunit/phpunit": "^5.7",
        "psr-4": {
            "Tests\\": "tests/",
            "OHM\\Tests\\Api\\": "ohm/tests/api/",
            "OHM\\Tests\\Functional\\": "ohm/tests/functional/",
            "OHM\\Tests\\Unit\\": "ohm/tests/unit/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t .",
        "test": "echo 'Use targets: test-mom and test-ohm'; exit 1",
        "test-mom": "phpunit",
        "test-ohm": "codecept run",
        "test-ohmv": "codecept run --steps --coverage --coverage-html",
        "coverage-ohm": "codecept run --coverage --coverage-html"
    }
}
